#spin up frontend standalone:
docker run -it -p 5173:5173 -v "$(pwd):./app" frontend-test

#spin up backend standalone:
docker run -it -p 3001:3001 -v "$(pwd):./app" backend-test

#spin up postgres standalone:
docker run -it -p 5432:5432 -e POSTGRES_PASSWORD=password postgres

#add persistence on restart
docker run -it -p 5432:5432 -e POSTGRES_PASSWORD=password -v pg_data:/var/lib/postgresql/data postgres
